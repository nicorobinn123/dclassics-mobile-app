<resources xmlns:tools="http://schemas.android.com/tools">
    <!--  Base application theme.  -->
    <style name="Theme.DClassicsBook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--  Primary brand color.  -->
        <item name="colorPrimary">@color/app_bar_background</item>
        <item name="colorPrimaryVariant">@color/app_background_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--  Secondary brand color.  -->
        <item name="colorSecondary">@color/button_accent_yellow</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!--  Can be adjusted  -->
        <item name="colorOnSecondary">@color/black</item>
        <!--  Status bar color.  -->
        <item name="android:statusBarColor">@color/app_background_dark</item>
        <!--  Customize your theme here.  -->
        <item name="android:windowBackground">@color/app_background_dark</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialCardViewStyle">@style/Widget.App.MaterialCardView</item>
    </style>
    <style name="Theme.DClassicsBook.NoActionBar" parent="Theme.DClassicsBook">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--  TextInputLayout Style  -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/button_accent_yellow</item>
        <item name="hintTextColor">@color/hint_text_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="boxBackgroundColor">@color/white</item>
        <!--  White background for text input  -->
        <item name="android:textColor">@color/text_dark</item>
        <!--  Dark text for input  -->
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <!--  Button Style  -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_dark</item>
        <item name="backgroundTint">@color/button_accent_yellow</item>
        <item name="cornerRadius">1dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    <style name="Widget.App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/text_light</item>
        <item name="strokeColor">@color/button_accent_yellow</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    <!--  CardView Style  -->
    <style name="Widget.App.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background_light_purple</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>
    <!--  Chip Style  -->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_selected_background</item>
        <item name="android:textColor">@color/chip_text_selected_color</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>
    <style name="MyCustomPopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textAppearance">@style/MyCustomPopupMenuTextAppearance</item>
    </style>
    <style name="MyCustomPopupMenuTextAppearance" parent="@android:style/TextAppearance.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/text_dark</item>
    </style>
    <!--  AppBarLayout Overlay Theme  -->
    <style name="Theme.DClassicsBook.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <!--  Popup Menu Overlay Theme  -->
    <style name="Theme.DClassicsBook.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>